{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    "jsx"
                ]
            }
        ],
        "max-len": [
            "error",
            80
        ],
        "semi": [
            1,
            "never"
        ],
        "react/prefer-stateless-function": "off",
        "react/prop-types": 0,
        "react/destructuring-assignment": 0,
        "no-console": "off",
        "no-underscore-dangle": "off"
    }
}